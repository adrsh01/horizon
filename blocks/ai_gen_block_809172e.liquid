{% doc %}
  @prompt
    Generate a marquee list
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
  }

  .ai-marquee-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.item_spacing }}px;
    width: fit-content;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.animation_speed }}s linear infinite;
  }

  .ai-marquee-track-{{ ai_gen_id }}:hover {
    {% if block.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  .ai-marquee-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_spacing }}px;
    white-space: nowrap;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    {% if block.settings.text_transform == 'uppercase' %}
      text-transform: uppercase;
    {% endif %}
  }

  .ai-marquee-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
  }

  .ai-marquee-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.icon_color }};
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-item-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.85 }}px;
    }

    .ai-marquee-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.85 }}px;
      height: {{ block.settings.icon_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<div class="ai-marquee-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-marquee-track-{{ ai_gen_id }}">
    {% liquid
      assign items_array = ''
      if block.settings.item_1 != blank
        assign items_array = items_array | append: block.settings.item_1 | append: '||'
      endif
      if block.settings.item_2 != blank
        assign items_array = items_array | append: block.settings.item_2 | append: '||'
      endif
      if block.settings.item_3 != blank
        assign items_array = items_array | append: block.settings.item_3 | append: '||'
      endif
      if block.settings.item_4 != blank
        assign items_array = items_array | append: block.settings.item_4 | append: '||'
      endif
      if block.settings.item_5 != blank
        assign items_array = items_array | append: block.settings.item_5 | append: '||'
      endif
      if block.settings.item_6 != blank
        assign items_array = items_array | append: block.settings.item_6 | append: '||'
      endif

      assign items = items_array | split: '||'
      assign items_count = items | size

      if items_count == 0
        assign items = 'Free Shipping||Easy Returns||24/7 Support||Secure Checkout' | split: '||'
      endif
    %}

    {% for i in (1..2) %}
      {% for item in items %}
        {% if item != blank %}
          <div class="ai-marquee-item-{{ ai_gen_id }}">
            {% if block.settings.show_icon %}
              <span class="ai-marquee-icon-{{ ai_gen_id }}">
                {% if block.settings.icon_type == 'star' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% elsif block.settings.icon_type == 'check' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                {% elsif block.settings.icon_type == 'heart' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                  </svg>
                {% elsif block.settings.icon_type == 'circle' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10"/>
                  </svg>
                {% elsif block.settings.icon_type == 'diamond' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M12 2L2 9l10 13L22 9z"/>
                  </svg>
                {% endif %}
              </span>
            {% endif %}
            <span>{{ item }}</span>
          </div>
        {% endif %}
      {% endfor %}
    {% endfor %}
  </div>
</div>

