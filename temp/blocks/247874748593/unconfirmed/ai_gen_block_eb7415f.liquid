{% doc %}
  @prompt
    A magazine-style editorial layout
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-editorial-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-editorial-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    align-items: stretch;
  }

  .ai-editorial-featured-{{ ai_gen_id }} {
    grid-column: span 7;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-editorial-featured-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: 600px;
    object-fit: cover;
    display: block;
  }

  .ai-editorial-featured-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: 600px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-editorial-featured-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-featured-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ block.settings.content_padding }}px;
    background: linear-gradient(to top, rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}), transparent);
    color: {{ block.settings.featured_text_color }};
  }

  .ai-editorial-category-{{ ai_gen_id }} {
    font-size: {{ block.settings.category_size }}px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 12px;
    font-weight: 600;
    color: {{ block.settings.featured_text_color }};
  }

  .ai-editorial-featured-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.featured_title_size }}px;
    line-height: 1.2;
    margin: 0 0 16px;
    font-weight: 700;
    color: {{ block.settings.featured_text_color }};
  }

  .ai-editorial-featured-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.excerpt_size }}px;
    line-height: 1.6;
    margin: 0 0 20px;
    color: {{ block.settings.featured_text_color }};
    opacity: 0.95;
  }

  .ai-editorial-featured-link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: {{ block.settings.featured_text_color }};
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: gap 0.3s ease;
  }

  .ai-editorial-featured-link-{{ ai_gen_id }}:hover {
    gap: 12px;
  }

  .ai-editorial-featured-link-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-editorial-sidebar-{{ ai_gen_id }} {
    grid-column: span 5;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-editorial-card-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    padding: {{ block.settings.card_padding }}px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    text-decoration: none;
    color: {{ block.settings.card_text_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-editorial-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .ai-editorial-card-image-{{ ai_gen_id }} {
    width: 120px;
    height: 120px;
    flex-shrink: 0;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-editorial-card-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-editorial-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-card-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
  }

  .ai-editorial-card-content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .ai-editorial-card-category-{{ ai_gen_id }} {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin-bottom: 8px;
    font-weight: 600;
    color: {{ block.settings.accent_color }};
  }

  .ai-editorial-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    line-height: 1.3;
    margin: 0 0 8px;
    font-weight: 600;
    color: {{ block.settings.card_text_color }};
  }

  .ai-editorial-card-excerpt-{{ ai_gen_id }} {
    font-size: 14px;
    line-height: 1.5;
    margin: 0;
    color: {{ block.settings.card_text_color }};
    opacity: 0.8;
  }

  .ai-editorial-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 989px) {
    .ai-editorial-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-editorial-featured-{{ ai_gen_id }},
    .ai-editorial-sidebar-{{ ai_gen_id }} {
      grid-column: span 1;
    }

    .ai-editorial-featured-image-{{ ai_gen_id }},
    .ai-editorial-featured-placeholder-{{ ai_gen_id }} {
      min-height: 400px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-editorial-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 0;
    }

    .ai-editorial-featured-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.featured_title_size | times: 0.6 }}px;
    }

    .ai-editorial-card-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-editorial-card-image-{{ ai_gen_id }} {
      width: 100%;
      height: 200px;
    }
  }
{% endstyle %}

<div class="ai-editorial-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-editorial-container-{{ ai_gen_id }}">
    <div class="ai-editorial-grid-{{ ai_gen_id }}">
      <div class="ai-editorial-featured-{{ ai_gen_id }}">
        {% if block.settings.featured_image %}
          <img
            src="{{ block.settings.featured_image | image_url: width: 1400 }}"
            alt="{{ block.settings.featured_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.featured_image.width }}"
            height="{{ block.settings.featured_image.height }}"
            class="ai-editorial-featured-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-editorial-featured-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
            <div class="ai-editorial-empty-state-{{ ai_gen_id }}">
              Add a featured image
            </div>
          </div>
        {% endif %}

        <div class="ai-editorial-featured-content-{{ ai_gen_id }}">
          {% if block.settings.featured_category != blank %}
            <div class="ai-editorial-category-{{ ai_gen_id }}">
              {{ block.settings.featured_category }}
            </div>
          {% endif %}

          {% if block.settings.featured_title != blank %}
            <h2 class="ai-editorial-featured-title-{{ ai_gen_id }}">
              {{ block.settings.featured_title }}
            </h2>
          {% endif %}

          {% if block.settings.featured_excerpt != blank %}
            <div class="ai-editorial-featured-excerpt-{{ ai_gen_id }}">
              {{ block.settings.featured_excerpt }}
            </div>
          {% endif %}

          {% if block.settings.featured_link != blank %}
            <a
              href="{{ block.settings.featured_link }}"
              class="ai-editorial-featured-link-{{ ai_gen_id }}"
            >
              {{ block.settings.featured_link_text }}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>

      <div class="ai-editorial-sidebar-{{ ai_gen_id }}">
        {% for i in (1..3) %}
          {% liquid
            assign card_image_key = 'card_' | append: i | append: '_image'
            assign card_category_key = 'card_' | append: i | append: '_category'
            assign card_title_key = 'card_' | append: i | append: '_title'
            assign card_excerpt_key = 'card_' | append: i | append: '_excerpt'
            assign card_link_key = 'card_' | append: i | append: '_link'

            assign card_image = block.settings[card_image_key]
            assign card_category = block.settings[card_category_key]
            assign card_title = block.settings[card_title_key]
            assign card_excerpt = block.settings[card_excerpt_key]
            assign card_link = block.settings[card_link_key]
          %}

          {% if card_link != blank %}
            <a href="{{ card_link }}" class="ai-editorial-card-{{ ai_gen_id }}">
          {% else %}
            <div class="ai-editorial-card-{{ ai_gen_id }}">
          {% endif %}
              <div class="ai-editorial-card-image-{{ ai_gen_id }}">
                {% if card_image %}
                  <img
                    src="{{ card_image | image_url: width: 240 }}"
                    alt="{{ card_image.alt | escape }}"
                    loading="lazy"
                    width="240"
                    height="240"
                  >
                {% else %}
                  <div class="ai-editorial-card-placeholder-{{ ai_gen_id }}">
                    {{ 'product-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-editorial-card-content-{{ ai_gen_id }}">
                {% if card_category != blank %}
                  <div class="ai-editorial-card-category-{{ ai_gen_id }}">
                    {{ card_category }}
                  </div>
                {% endif %}

                {% if card_title != blank %}
                  <h3 class="ai-editorial-card-title-{{ ai_gen_id }}">
                    {{ card_title }}
                  </h3>
                {% endif %}

                {% if card_excerpt != blank %}
                  <p class="ai-editorial-card-excerpt-{{ ai_gen_id }}">
                    {{ card_excerpt }}
                  </p>
                {% endif %}
              </div>
          {% if card_link != blank %}
            </a>
          {% else %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

